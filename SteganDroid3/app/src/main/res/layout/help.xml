<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sandysatriya.stegandroid.Help"
    android:background="@drawable/help"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="25dp"
        android:fontFamily="casual"
        android:text="How To Encode"
        android:textColor="#7FFFD4"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="1. Pilih gambar untuk di encode (disisipkan pesan)."
        android:layout_below="@+id/textView4"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textColor="#00BFFF"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2. Isikan pesan rahasia pada text view."
        android:layout_below="@+id/textView5"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textColor="#00BFFF"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3. Klik button encode untuk meng-enkripsi pesan ke dalam gambar."
        android:layout_below="@+id/textView8"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textColor="#00BFFF"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_below="@+id/textView9"
        android:layout_marginTop="36dp"
        android:fontFamily="casual"
        android:text="How To Decode"
        android:textColor="#7FFFD4"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="20dp"
        android:text="1. Pilih menu Decode pada navigation drawer."
        android:textAlignment="center"
        android:textColor="#00BFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2. Pilih gambar yang ingin di decode."
        android:layout_below="@+id/textView7"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textColor="#00BFFF"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 3. Gambar akan otomatis ter-Decode."
        android:layout_below="@+id/textView10"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textColor="#00BFFF"
        android:textSize="20sp"
        android:textStyle="bold"/>
</RelativeLayout>
