<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ss"
    android:paddingRight="15dp"
    android:paddingLeft="15dp"
    tools:context="com.example.sandysatriya.stegandroid.DecodeActivity">

        <TextView
            android:id="@+id/gambar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Image Decoder"
            android:textColor="#7FFFD4"
            android:textSize="15pt"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/imageViewDecode"
            android:layout_below="@+id/gambar"
            android:layout_marginBottom="50dp"
            android:layout_alignRight="@+id/TextViewDecodedMessage"
            android:layout_alignLeft="@+id/TextViewDecodedMessage"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The Secret Message is : "
            android:id="@+id/textView"
            android:layout_marginBottom="10dp"
            android:textSize="19sp"
            android:textColor="#FFFFFF"
            android:layout_below="@+id/imageViewDecode"
            android:layout_alignLeft="@+id/TextViewDecodedMessage"
            android:layout_alignStart="@+id/TextViewDecodedMessage" />

        <EditText
            android:id="@+id/TextViewDecodedMessage"
            android:layout_width="500dp"
            android:layout_height="100dp"
            android:background="#E0FFFF"
            android:editable="false"
            android:textColor="#000000"
            android:textSize="17sp"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true" />

</RelativeLayout>

