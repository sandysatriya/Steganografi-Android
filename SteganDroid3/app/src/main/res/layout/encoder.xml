<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ss"
    tools:context="com.example.sandysatriya.stegandroid.EncodeActivity">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView2"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <TextView
                    android:id="@+id/gambar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Image Encoder"
                    android:textColor="#7FFFD4"
                    android:textSize="15pt"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:id="@+id/imageViewEncode"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_alignRight="@+id/encode"
                    android:layout_alignEnd="@+id/encode"
                    android:layout_alignLeft="@+id/send"
                    android:layout_alignStart="@+id/send"
                    android:layout_below="@+id/gambar" />

                <TextView
                    android:id="@+id/imgSelected"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_alignEnd="@+id/imageViewEncode"
                    android:layout_alignLeft="@+id/imageViewEncode"
                    android:layout_alignRight="@+id/imageViewEncode"
                    android:layout_alignStart="@+id/imageViewEncode"
                    android:layout_below="@+id/imageViewEncode"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="17sp" />

                <Button
                    android:id="@+id/btnSelectImage"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_below="@+id/imgSelected"
                    android:background="@drawable/choosepic_click"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:text="Choose a Pic" />

                <EditText
                    android:id="@+id/pesan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/send"
                    android:layout_alignStart="@+id/send"
                    android:layout_below="@+id/btnSelectImage"
                    android:layout_marginBottom="60dp"
                    android:layout_marginRight="15dp"
                    android:height="70dp"
                    android:background="#E0FFFF"
                    android:hint="  Input The Message Here"
                    android:inputType="textMultiLine"
                    android:textColor="#000000"
                    android:textColorHint="?attr/colorControlNormal" />

                <Button
                    android:id="@+id/send"
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/send_click"
                    android:layout_toLeftOf="@+id/btnSelectImage"
                    android:layout_toStartOf="@+id/btnSelectImage"
                    android:text="Send" />

                <Button
                    android:id="@+id/encode"
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/encode_click"
                    android:layout_toEndOf="@+id/btnSelectImage"
                    android:layout_toRightOf="@+id/btnSelectImage"
                    android:text="Encode" />

            </RelativeLayout>

        </ScrollView>

</RelativeLayout>

